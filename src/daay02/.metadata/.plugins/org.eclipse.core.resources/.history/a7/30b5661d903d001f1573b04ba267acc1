package day12;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.HashSet;
import java.util.Iterator;
import java.util.LinkedList;
import java.util.List;
import java.util.Map;
import java.util.Scanner;
import java.util.Set;

public class TrtCatch {

	//EXCEPTION, THREAD, INNERCLASS
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//컬력션 프레임 워크
		//리스트, 셋, 맵
		
		//리스트
		//배열의 사용 편의를 위해 만들어잔 객체
		//동적배열 <메모리 크기가 변화된다
		//변화라는 단어는 삭제와 추가기능
		
		//어레이리스트보다 느릴수 있다
		//링크드 리스트와 어레이 리스트의 속도차이가 존재하므로
		//하나만 맹몾겆으로 사용하는 것은 지양
		
		//동적바인딩
		//상속
		//오버라이드 된 메서드만 사용가능
		List<String> list; // = new LinkedList<>();
		list = new ArrayList<>();
		
		list.add("슈퍼맨");
		list.add("배트맨");
		
		for(int i = 0; i< list.size(); i++) {
			System.out.println(i);
		}
		for(String li : list) {
			System.out.println(li);
		}
		
		Iterator<String> it = list.iterator();
		while(it.hasNext()) {
			String e = it.next();
			System.out.println(e);
		}
		
		//중복제거
		Set<String> set = new HashSet<String>();
		
		set.add("슈퍼맨");
		set.add("슈퍼맨");
		set.add("슈퍼맨"); //하나는 입력이 안된다
		
		System.out.println(set.size());
		
		//기본 for문은 사용할 수없다
		
		Iterator<String> it2 = set.iterator();
		while(it2.hasNext()) {
			String e = it2.next();
			System.out.println(e);
		}
		for(String li : set) {
			System.out.println(li);
		}
		//key value
		//set의 중복제거 기능을 하벼쳐서 만들어진 객체
		//key는 set의 중복제거를 가지고 옴
		//데이터 가공을 목적(자바 외에서 데이터를 가지고 올떄)
		Map<String, String> map = new HashMap<String, String>();
		
		map.put("num", "슈퍼맨");
		System.out.println("num");
		
		Set<String> keyList = map.keySet();
		for(String key : keyList) {
			System.out.println("Key: "+key);
//			System.out.println("value: "map.get(key));
		}
		
		//exception 예외처리
		Scanner sc = new Scanner(System.in);
		
		//Excpetion
		//프로그램 구동이 멈춤
		//개발자가 이미 인지하고 있는 에러를 예외처리 하는 것
		//try문 안에서 에러가 발생이 되었을 경우
		//catch에게 전달
		while(true) {
			try {
				int num = sc.nextInt();
				System.out.println("입력값: "+num);
			} catch (Exception e) {
				System.out.println("error");
				break;
			}
		}
		
		//외부 라이브러리를 가져다 쓸때 그떄 발생되는 excption(일반에러)
		//일반 에러, 실행에러(RunTime Exception)
		//실행 에러 코드 자체는 문제가 없다
		//불러오는 과정에서 상황에 따라서 에러가 발생

		
		try {
			String [] arr = new String[1];
			//System.out.println(arr[0].equals(""));
			arr[1] = "슈퍼맨";
			
			//초기화 작업
			//자바는 가비지컬렉터가 존재하기떄문에 메모리관리
			//가비지컬렉터가 멍청하므로 ㅇㅇㅇㅇ
			arr[0] = null;
		
		//excpetion이라는 것은 지양 (모든 에러 예외의 최상위)
			//오브젝트 => 익셉션(모든 예외처리를 담당)
			//개발자가 인지한 범위 내에서만 사용하는 것
		} catch(NullPointerException e) {
			System.out.println("NullPointerException");
		}
		catch(ArrayIndexOutOfBoundsException e) {
			System.out.println("ArrayIdexOutOfBoundsException");
		}
		//모든 익셉션을 담당하고 있다 무조건 밑으로
		catch(Exception e) {
			System.out.println("exception");
		}
		//반드시 구동되는 부분
		finally {
			
			try { } catch (Exception e2) {}
			System.out.println("finally");
			//arr[0] = null;
		}
		
		//에러를 잘알아야됨
		//코드를 잘짜는 것은 디폴트
		//디버그를 잘하는 사람이 고트다( 개발이 30% 디버그가 70%)
	}

}
